                        +rooms-list(['../src/img/rooms/room-8.jpg', 450, '5 300', 4, 39])
                        +rooms-list(['../src/img/rooms/room-9.jpg', 350, '5 000', 3, 77])
                        +rooms-list(['../src/img/rooms/room-10.jpg', 666, '5 000', 5, 25])
                        +rooms-list(['../src/img/rooms/room-11.jpg', 444, '5 000', 3, 15])
