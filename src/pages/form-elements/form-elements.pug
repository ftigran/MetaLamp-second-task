include ../../modules/logo/logo
include ../../modules/text-field/text-field

mixin block-wrapper(title, subtitle)
    .block-wrapper
        .block-wrapper__text
            h3.block-wrapper__title=title
            span.block-wrapper__subtitle=subtitle
        .block-wrapper__block
            block

+logo(true)
.container
    +block-wrapper('Text Field', 'Default')
        +text-field('Email', 'email')
    +block-wrapper('Text Field', 'Hover / Focus')
        +text-field('This is pretty awesome', 'text')
